#
# This file defines the AWS region and S3 bucket we're going to use to store
# our artifacts as well as displaying all this along with the current account
# information

#
# Region & artifact store
###############################################################################

# https://www.terraform.io/docs/providers/index.html
provider "aws" {
  version = "~> 2.8"
  region  = "<%= CONFIG['region'] %>"
}

# https://www.terraform.io/docs/backends/config.html
terraform {
  required_version = "~> 0.12"

  # https://www.terraform.io/docs/backends/types/s3.html
  backend "s3" {
    region = "<%= CONFIG['region'] %>"
    bucket = "<%= CONFIG['artifacts-bucket'] %>"
    key    = "terraform.tfstate"
  }
}

#
# Output account and config info
###############################################################################

data "aws_caller_identity" "current" {
}

output "account_id" {
  value = "${data.aws_caller_identity.current.account_id}"
}

output "caller_arn" {
  value = "${data.aws_caller_identity.current.arn}"
}

output "caller_user" {
  value = "${data.aws_caller_identity.current.user_id}"
}

output "caller_id" {
  value = "${data.aws_caller_identity.current.user_id}"
}

output "region" {
  value = "<%= CONFIG['region'] %>"
}

output "artifacts_bucket" {
  value = "<%= CONFIG['artifacts-bucket'] %>"
}
